<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <% if params[:controller] == "pages" && params[:action] == "home" %>
    <div>
      <p class="title-navbar">Travel med</p>
    </div>
  <% else %>
    <div>
      <%= link_to root_path do %>
        <%= image_tag "pill_logo.png", class:"logo-large" %>
      <% end %>
      <p class="title-navbar">Travel med</p>
    </div>
  <% end %>

  <% if user_signed_in? %>
    <div class="dropdown">
      <%= image_tag "avatar-picture.JPG", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
        <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
      </div>
    </div>
  <% else %>
    <%= link_to "Login", new_user_session_path, class: "nav-link nav-item" %>
  <% end %>

</div>







